unit Unit1Bulls;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.StdCtrls;

type
  TForm1 = class(TForm)
    Label1: TLabel;
    Label2: TLabel;
    Label3: TLabel;
    Label4: TLabel;
    Edit1: TEdit;
    Label5: TLabel;
    Button1: TButton;
    Button2: TButton;
    Button3: TButton;
    Memo1: TMemo;
    Label6: TLabel;
    Edit2: TEdit;
    procedure Button1Click(Sender: TObject);
    procedure FormCreate(Sender: TObject);
    procedure Button3Click(Sender: TObject);
    procedure FormActivate(Sender: TObject);
  private
    { Déclarations privées }
  public
    { Déclarations publiques }
  end;
CONST
  alphabet='abcdefghijklmnopqrtuvwxyz';
var
  Form1: TForm1;
  MonMot:string;

implementation

{$R *.dfm}

procedure TForm1.Button1Click(Sender: TObject);
begin
showmessage('Merci d''avoir joue ! A la prochaine ! ');
close;
end;

procedure TForm1.Button3Click(Sender: TObject);
var
  i,j:integer;
  test,cpt:integer;
  errone:string;
  minu:boolean;
  essai2:integer;
begin
  minu:= false;
  errone:='';
  test:=0;
  cpt:=0;
  Label3.Caption:='';
  Label4.Caption:='';
  if length(Edit1.Text)<>length(MonMot) then
     begin
       errone:= errone + 'Mauvaise taille du mot';
      end;

  for i := 1 to length(Edit1.Text) do
      begin
           if (ord(Edit1.Text[i])< ord('a')) OR (ord(Edit1.Text[i])> ord('z')) then
             begin
               minu:=true;
             end;
      end;

  if minu=true then
    begin
      errone:= errone + 'Majuscule ou caractere speciaux non acceptes';
    end;

  if errone='' then
     begin
        essai2:=strtoint(Edit2.Text);
        essai2:=essai2-1;
        Edit2.Text:=inttostr(essai2);

         for i := 1 to length(MonMot) do
             begin
               if Edit1.Text[i]=MonMot[i] then
                 begin
                   test:=test+1;
                   Label3.Caption:=inttostr(test);
                 end;
             end;
          for i := 1 to length(MonMot) do
             begin
               for j := 1 to length(Edit1.Text) do
                 begin
                   if (Edit1.Text[j]=MonMot[i]) AND (i<>j) then
                     begin
                        cpt:=cpt+1;
                        Label4.Caption:=inttostr(cpt);
                     end;

                 end;
             end;
     end
  else showmessage(errone);

  if strtoint(Label3.Caption)=length(MonMot) then
    begin
      showmessage ('BRAVO ! Vous avez gagne ! Le mot a trouve ete : '+MonMot)
    end;
 { if strtoint(Edit2.Text)=0 then
    begin
      showmessage ('PERDU ! T es nul a chie ! Le mot a trouve ete : '+MonMot)
    end; }
end;

procedure TForm1.FormActivate(Sender: TObject);
var
  essai:integer;

begin
   essai:=0;
   Edit1.SetFocus;

  case length(MonMot) of
    3: essai:=4;
    4: essai:=7;
    5: essai:=10;
    6: essai:=16;
    7: essai:=20;
   end;
  Edit2.Text:=inttostr(essai);
end;

procedure TForm1.FormCreate(Sender: TObject);
var
  alea:integer;
begin
  randomize;
  Label3.Caption:='0';
  Label4.Caption:='0';
  Memo1.Lines.LoadFromFile('Mots.txt');
  Memo1.Visible:=False;
  alea:=random(10);
  MonMot:=Memo1.Lines[alea];
  Label6.Caption:=('Nombre de carac max : ')+inttostr(length(MonMot));
  Edit1.Text:='';
end;
end.
